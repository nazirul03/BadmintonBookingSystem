@model BadmintonBookingSystemAPI.Models.Booking

<h2>Delete Booking List</h2>

<h3>Are you sure you want to delete this booked list?</h3>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Court Number
        </dt>
        <dd class="col-sm-10">
            @Model.BookCourtNum
        </dd>
        <dt class="col-sm-2">
            Duration
        </dt>
        <dd class="col-sm-10">
            @Model.BookDuration
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>